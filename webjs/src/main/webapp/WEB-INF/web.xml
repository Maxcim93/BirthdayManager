<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">

  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>ViewUsersServlets</servlet-name>
    <servlet-class>com.maxim.webjs.servlets.ViewUsersServlets</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ViewFriendsServlet</servlet-name>
    <servlet-class>com.maxim.webjs.servlets.ViewFriendsServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>ViewUsersServlets</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ViewFriendsServlets</servlet-name>
    <url-pattern>/user/friends</url-pattern>
  </servlet-mapping>

</web-app>