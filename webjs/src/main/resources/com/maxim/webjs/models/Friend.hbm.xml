<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.maxim.manager.Friend" table="friend">
        <meta attribute="class-description">
            This class contains the friend detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="birthday" column="birthday" type="java.util.Date"/>
        <property name="interests" column="interests" type="string"/>
        <many-to-one name="user"
                     column="iduser"
                     class="com.maxim.manager.User"
                     cascade="all"
                     lazy="false"/>
    </class>
</hibernate-mapping>